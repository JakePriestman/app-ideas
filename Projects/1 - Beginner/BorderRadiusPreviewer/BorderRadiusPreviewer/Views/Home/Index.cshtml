@{
    ViewData["Title"] = "Home Page";
}

<h1>Border Radius Previewer</h1>
<hr/>
<a id="complex" asp-controller="Home" asp-action="Complex">Full-control</a>
<div class="float-parent">
    <div id="float-child-left">
        <form>
            <label for="top-left">border-radius-top-left</label>
            <input type="number" id="top-left" name="top-left" placeholder="px" onchange="TopLeft()">
            <label for="top-right">border-radius-top-right</label>
            <input type="number" id="top-right" name="top-right" placeholder="px" onchange="TopRight()">
            <label for="bottom-left">border-radius-bottom-left</label>
            <input type="number" id="bottom-left" name="bottom-left" placeholder="px"onchange="BottomLeft()">
            <label for="bottom-right">border-radius-bottom-right</label>
            <input type="number" id="bottom-right" name="bottom-right" placeholder="px" onchange="BottomRight()">
        </form>
    </div>
    <div id="buttons">
        <button id="CTC" onclick="CopyToClipboard()"></button>
    </div>
    <div id="code">
        
        <code>
            border-top-left-radius: <em id="topLeft">0 px;</em>
            border-top-right-radius: <em id="topRight">0 px;</em>
            border-bottom-left-radius: <em id="bottomLeft">0 px;</em>
            border-bottom-right-radius: <em id="bottomRight">0 px;</em>
        </code>
    </div>

    <div id="float-child-right">
        Border radius!
    </div>


</div>

